<h1>All Tasks</h1>
<div id="task_list">
<% @tasks.each do |task| %>
  <h3><%= task.id %>: <a href="/tasks/<%= task.id %>" class="btn btn-warning"><%= task.title %></a></h3>
  <a class="btn btn-default btn-xs" href="/tasks/<%= task.id %>/edit">Edit</a>

  <form action="/tasks/<%= task.id %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
  </form>

<% end %>
</div>
